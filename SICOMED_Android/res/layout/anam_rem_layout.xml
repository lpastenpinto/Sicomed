<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
   android:orientation="horizontal">
  <ScrollView  android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
	<HorizontalScrollView
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content">
  
		<LinearLayout   android:layout_width="wrap_content"
  			android:layout_height="wrap_content"> 
       
    
		<LinearLayout android:orientation="vertical"
            android:layout_width="550dp"  android:layout_height="fill_parent"
            >        
		<TextView  android:id="@+id/txt"
  			android:textSize="30dp"
			android:textStyle="bold"
			android:typeface="serif"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  			android:text="Anamnesis Remota"/>
		<TextView android:id="@+id/antmorb_txt" 
    
			android:layout_height="wrap_content"
			android:textSize="20dp"
			android:textStyle="bold"
			android:typeface="serif"
    		android:layout_width="wrap_content"
    		android:text="\n\tAntecedentes Morbidos"/>
		<EditText
        	android:id="@+id/antmorb_edit"        
        	android:layout_width="500dp"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="25dp"/>
		<TextView android:id="@+id/hab_txt" 
			android:layout_height="wrap_content"
			android:textSize="20dp"
			android:textStyle="bold"
			android:typeface="serif"
    		android:layout_width="wrap_content"
    		android:text="\n\tHabitos"/>
		<EditText
        	android:id="@+id/hab_edit"	        
        	android:layout_width="500dp"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="25dp"/>
		<TextView android:id="@+id/med_txt" 
			android:layout_height="wrap_content"
			android:textSize="20dp"
			android:textStyle="bold"
			android:typeface="serif"
    		android:layout_width="wrap_content"
    		android:text="\n\tMedicamentos"/>
		<EditText
        	android:id="@+id/med_edit"
        	android:layout_width="500dp"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="25dp"/>
		<TextView android:id="@+id/antfam_txt" 
			android:layout_height="wrap_content"
			android:textSize="20dp"
			android:textStyle="bold"
			android:typeface="serif"
    		android:layout_width="wrap_content"
    		android:text="\n\tAntecedentes Familiares"/>
		<EditText
   	    	android:id="@+id/antfam_edit"
        	android:layout_width="500dp"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="25dp"/>
</LinearLayout> 

<LinearLayout android:orientation="vertical"
            android:layout_width="550dp"  android:layout_height="fill_parent" android:layout_marginTop="50dp"
            >        
	<TextView  android:id="@+id/alergias_txt"
  			android:textSize="20dp"
			android:textStyle="bold"
			android:typeface="serif"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  			android:text="Alergias:"/>

	<TextView android:id="@+id/aler_med_txt" 	    
		android:layout_height="wrap_content"
		android:textSize="15dp"
		android:textStyle="bold"
		android:typeface="serif"
    	android:layout_width="wrap_content"
    	android:text="\n\tMedicamentos"/>
	<EditText
        android:id="@+id/aler_med_edit"       
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"/>
	<TextView android:id="@+id/aler_alim_txt" 
		android:layout_height="wrap_content"
		android:textSize="15dp"
		android:textStyle="bold"
		android:typeface="serif"
    	android:layout_width="wrap_content"
    	android:text="\n\tAlimentos"/>
	<EditText
        android:id="@+id/aler_alim_edit"       
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"/>
	<TextView android:id="@+id/aler_sustamb_txt" 
		android:layout_height="wrap_content"
		android:textSize="15dp"
		android:textStyle="bold"
		android:typeface="serif"
    	android:layout_width="wrap_content"
    	android:text="\n\tSustancias Ambientales"/>
	<EditText
        android:id="@+id/sustamb_edit"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"/>	
	<TextView android:id="@+id/aler_sustpiel_txt" 
		android:layout_height="wrap_content"
		android:textSize="15dp"
		android:textStyle="bold"
		android:typeface="serif"
    	android:layout_width="wrap_content"
    	android:text="\n\tSustancias contacto con la piel"/>
	<EditText
        android:id="@+id/sustpiel_edit"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"/>
	<TextView android:id="@+id/picad_txt" 
		android:layout_height="wrap_content"
		android:textSize="15dp"
		android:textStyle="bold"
		android:typeface="serif"
    	android:layout_width="wrap_content"
    	android:text="\n\tPicaduras"/>
	<EditText
        android:id="@+id/picad_edit"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"/>
</LinearLayout> 

<LinearLayout android:orientation="vertical" 
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            > 
		<Button
	    		    android:id="@+id/b_edit"
	    		    android:layout_width="150dp"
	    		    android:layout_height="wrap_content"
	    		    android:text="Editar"
	    		     />
	
</LinearLayout>

</LinearLayout>
</HorizontalScrollView>
    
</ScrollView>	

</LinearLayout>
