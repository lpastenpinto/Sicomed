<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
 <ScrollView  android:layout_width="wrap_content"
    android:layout_height="wrap_content">
 <HorizontalScrollView
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content">
  
 <LinearLayout   android:layout_width="wrap_content"
  			android:layout_height="wrap_content">
  <ScrollView  android:layout_width="wrap_content"
    android:layout_height="wrap_content">
  	<LinearLayout android:orientation="vertical"
            android:layout_width="800dp" android:layout_height="wrap_content">            
  	   <TextView  android:id="@+id/txt"
  			android:textSize="20dp"
			android:textStyle="bold"
			android:typeface="serif"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  			android:text="Historia de Tratamientos"/>  	   
       <TextView android:id="@+id/Hist_trat_txt" 
            android:layout_marginLeft="25dp"
			android:layout_height="wrap_content"
    		android:layout_width="700dp"/>     	
	</LinearLayout>
</ScrollView>	
	<LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content" android:layout_height="wrap_content">
       <TextView android:id="@+id/Trat_txt" 
			android:textSize="20dp"
			android:textStyle="bold"
			android:typeface="serif"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
    		android:text="Nuevo Tratamiento"/>  
    	<EditText
        	android:id="@+id/Trat_edit"
    	    android:layout_width="450dp"
        	android:layout_height="wrap_content"/>
		        <Button
	    		    android:id="@+id/b_guard_trat"
	    		    android:layout_width="150dp"
	    		    android:layout_height="wrap_content"
	    		    android:text="Guardar" />    		
    	<TextView android:id="@+id/Control_txt" 
			 android:textSize="20dp"
			android:textStyle="bold"
			android:typeface="serif"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
    		android:text="Control y Evolucion"/>      		
    	<EditText
        	android:id="@+id/Control_edit"
    	    android:layout_width="450dp"
        	android:layout_height="wrap_content"/>    	
  	    <Spinner android:id="@+id/fecha_t"
   	 			android:layout_width="200dp"   
   		 		android:layout_height="wrap_content" 
   		 		android:text="Elegir Fecha"/>		  
        <Button
	    		    android:id="@+id/b_guard_control"
	    		    android:layout_width="150dp"
	    		    android:layout_height="wrap_content"
	    		    android:text="Guardar" />	   	
	</LinearLayout>
	
	
	
</LinearLayout>
</HorizontalScrollView>
    
</ScrollView>		
</LinearLayout>